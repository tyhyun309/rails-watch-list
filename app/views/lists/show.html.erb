<div class="container" style="width:70%">
  <div>
    <h2><%= @list.name %></h2>
    <% @list.bookmarks.each do |bookmark| %>
      <p>
        <h4>Title: <%= bookmark.movie.title %></h4>
        <h5>Comment: <%= bookmark.comment %></h4>
        <p><strong>Overview: </strong><%= bookmark.movie.overview  %></p>
        <p><strong>Rating: </strong><%= bookmark.movie.rating  %> </p>
        <%= image_tag "#{bookmark.movie.poster_url}" , width: 300 %>
        <%= link_to 'Remove from list👋🏻',  bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "sure?" }, class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
  <div style="text-align:center">
    <%= link_to 'Back to list', lists_path, class: "btn btn-success" %>
    <%= link_to '+ New bookmark', new_list_bookmark_path(@list), class: "btn btn-primary" %>
  </div>
</div>
