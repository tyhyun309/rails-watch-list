<div class="container" style="width:70%" id="list">

  <h2><%= @list.name %></h2>
  <% if @list.bookmarks.present? %>
    <div class="cards-movie">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-product">
          <%= image_tag "#{bookmark.movie.poster_url}" , width: 500 %>
          <div class="card-product-infos">
            <h4>Title: <%= bookmark.movie.title %></h4>
            <p>
              <p><strong>Comment: </strong><%= bookmark.comment  %></p>
              <p><strong>Overview: </strong><%= bookmark.movie.overview  %></p>
              <p><strong>Rating: </strong><%= bookmark.movie.rating  %> </p>
            </p>
            <%= link_to 'Remove from list ❌',  bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "sure?" }, class: "btn btn-primary btn-sm" %>

          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <h2>Your movie list is empty now.</h2>
  <% end %>

  <div style="text-align:center">
    <%= link_to 'Back', lists_path(anchor:'movies-all'), class: "btn btn-success" %>
    <%= link_to '+ New bookmark', new_list_bookmark_path(@list), class: "btn btn-primary" %>
  </div>
</div>
