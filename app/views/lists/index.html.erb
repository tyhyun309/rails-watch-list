<div class="container">
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://s.yimg.com/os/creatr-uploaded-images/2023-04/a4bb8ab0-daea-11ed-94f9-5c4f39a1e573)">
        <h2><%= list.name %></h2>
        <h3><%= link_to "See details", list_path(list), class: "btn btn-primary" %></h3>
      </div>
    <% end %>
  </div>
  <p style="text-align:center"><%= link_to "+ New List", new_list_path, class: "btn btn-primary btn-lg" %></p>
</div>
